<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pz.lab.scheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:configChanges="orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalendarScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timeline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/new_task_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TimePickerDialog"
            android:label="@string/title_activity_time_picker_dialog"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
        <activity
            android:name=".widget.UserListDialog"
            android:label="@string/title_activity_user_list_dialog"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
    </application>

</manifest>